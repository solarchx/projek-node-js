<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Form Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
  </head>
  <body>
    <div
      class="2xl:w-11/12 xl:w-11/12 lg:w-11/12 md:11/12 w-full mx-auto h-screen flex flex-col gap-5 items-center justify-center mx-auto"
    >
      <div class="mb-4">
        <% if (msg == "username or password is wrong") { %>
        <div
          class="bg-red-400 py-3 text-white font-bold border border-green-400 text-green-700 px-4 py-3 rounded relative"
        >
          <span class="block sm:inline py-3"><%= msg %></span>
        </div>
        <% } else {%>
        <div></div>
        <% } %>
      </div>

      <h1 class="font-bold text-blue-600 text-4xl mb-5">Form Login</h1>

      <form
        action="/user/siswa/login"
        method="post"
        class="w-[400px] p-7 bg-slate-50 shadow-black shadow-sm"
      >
      <img class="mx-auto w-24 h-24" src="img/logo-rpl.png" alt="">

        <div class="flex flex-col mt-4">
          <label for="" class="mb-4 font-bold text-lg">Username :</label>
          <input
            class="bg-slate-100 p-2 shadow-black shadow-sm outline-none"
            type="text"
            name="username"
            id=""
          />
        </div>

        <div class="flex flex-col mt-4 relative">
          <label for="" class="mb-4 font-bold text-lg">Password :</label>
          <input
            class="bg-slate-100 p-2 shadow-black shadow-sm outline-none "
            type="password"
            name="password"
            id="input_password"
            />
            <img id="eye" class="hidden w-4 h-4 absolute right-3 translate-y-1/2 top-12" src="data:image/png;base64,"/>
            <img id="eye-tutup" class="w-4 h-4 z-50 absolute right-3 translate-y-1/2 top-12" src="data:image/png;base64,"/>
        </div>

        <button
          type="submit"
          class="font-bold text-lg px-7 py-2 bg-blue-500 w-full mt-4 text-slate-50 hover:bg-blue-600 hover"
        >
          Login
        </button>
      </form>
    </div>

    <script>

      const eye = document.getElementById("eye");
      const inputPassword = document.getElementById("input_password");
      const eyeTutup = document.getElementById("eye-tutup");

      eyeTutup.addEventListener("click", () => {
        eyeTutup.style.display = "none";
        eye.style.display = "block";
        inputPassword.type = "text";
      });

      eye.addEventListener("click", () => {
        eye.style.display = "none";
        eyeTutup.style.display = "block";
        inputPassword.type = "password";
      });

    </script>
  </body>
</html>
